-
  const headerLinks = [
    {label: "Общая информация", href: "#hi"},
    {label: "Объявления", href: "#"},
    {label: "Результаты экзаменов", href: "#"},
    {label: "Контакты", href: "#contacts"}
  ]

  const langLinks = [
    {label: 'en', href: "#en"},
    {label: '中文', href: "#ch"}
  ]

mixin header()
  header.header
    .container.header__container
      .header__logo
        a.header__logo-link(href="/")
          img.header__logo-img(width="80" height="50" src="img/logo.svg")
      .header__nav
        each link in headerLinks
          a.header__nav-link(href= link.href)= link.label
      .header__lang
        each link in langLinks
          a.header__lang-link(href= link.href)= link.label
